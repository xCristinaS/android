<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60">

                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/dimens65dp"
                    android:text="@string/nombre"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/lblNombreAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen5dp"
                    android:layout_marginTop="@dimen/dimens65dp"
                    android:layout_toRightOf="@id/lblNombre"
                    android:text="Nombre: " />

                <TextView
                    android:id="@+id/lblApellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblNombreAl"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:text="@string/apellidos"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/lblApellidosAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblNombreAl"
                    android:layout_marginLeft="@dimen/margen5dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:layout_toRightOf="@id/lblApellidos"
                    android:text="Apellidos: " />

                <TextView
                    android:id="@+id/lblTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblApellidosAl"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:text="@string/telefono"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/lblTelefonoAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblApellidosAl"
                    android:layout_marginLeft="@dimen/margen5dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:layout_toRightOf="@id/lblTelefono"
                    android:text="Teléfono: " />

                <TextView
                    android:id="@+id/lblDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblTelefonoAl"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:text="@string/direccion"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/lblDireccionAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblTelefonoAl"
                    android:layout_marginLeft="@dimen/margen5dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:layout_toRightOf="@id/lblDireccion"
                    android:text="Dirección: " />

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblDireccionAl"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:text="@string/email"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/lblEmailAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblDireccionAl"
                    android:layout_marginLeft="@dimen/margen5dp"
                    android:layout_marginTop="@dimen/margen15dp"
                    android:layout_toRightOf="@id/lblEmail"
                    android:text="Email: " />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="40">

                <ImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="@dimen/margin10dp"
                    android:layout_marginLeft="@dimen/margen15dp"
                    android:layout_marginRight="@dimen/margen15dp"
                    android:layout_marginTop="@dimen/margin10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>