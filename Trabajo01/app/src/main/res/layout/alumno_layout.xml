<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/margin30dp"
    card_view:cardElevation="@dimen/margin30dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_fondo_alumno"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70">

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen15dp"
                android:layout_marginStart="@dimen/margen15dp"
                android:layout_marginTop="@dimen/margen15dp"
                android:text="@string/nombre"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/lblNombreAl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen5dp"
                android:layout_marginStart="@dimen/margen5dp"
                android:layout_marginTop="@dimen/margen15dp"
                android:layout_toRightOf="@id/lblNombre"
                android:layout_toEndOf="@id/lblNombre" />

            <TextView
                android:id="@+id/lblTelefonoAl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblNombreAl"
                android:layout_marginLeft="@dimen/margen15dp"
                android:layout_marginStart="@dimen/margen15dp"
                android:layout_marginTop="@dimen/margen15dp"
                android:text="@string/telefono"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblNombreAl"
                android:layout_marginBottom="@dimen/margen15dp"
                android:layout_marginLeft="@dimen/margen5dp"
                android:layout_marginStart="@dimen/margen5dp"
                android:layout_marginTop="@dimen/margen15dp"
                android:layout_toRightOf="@id/lblTelefonoAl"
                android:layout_toEndOf="@id/lblTelefonoAl"/>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30">

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="@dimen/dimens70dp"
                android:layout_height="@dimen/dimens70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin8dp"
                android:layout_marginEnd="@dimen/margin8dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>