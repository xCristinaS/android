<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:padding="15px"
        android:id="@+id/lblNombreAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "/>

    <TextView

        android:padding="15px"
        android:id="@+id/lblApellidosAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos: "
        android:layout_below="@id/lblNombreAl"/>

    <TextView
        android:id="@+id/lblTelefonoAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblApellidosAl"
        android:text="Teléfono: "
        android:padding="15px"/>

    <TextView
        android:id="@+id/lblDireccionAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTelefonoAl"
        android:text="Dirección: "
        android:padding="15px"/>

    <TextView
        android:id="@+id/lblEmailAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDireccionAl"
        android:text="Email: "
        android:padding="15px"/>

</RelativeLayout>