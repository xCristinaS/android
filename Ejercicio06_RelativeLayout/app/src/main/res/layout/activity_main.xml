<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblConexion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alturaLblConexion"
        android:textSize="@dimen/tamanioTextoLblConexion"
        android:text="@string/conexion"/>
    <TextView
        android:id="@+id/lblUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usuario"
        android:paddingLeft="@dimen/rellenoIzqlblUsuClave"
        android:layout_below="@id/lblConexion"/>
    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintTxtUsuario"
        android:layout_below="@id/lblUsuario"/>
    <TextView
        android:id="@+id/lblClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clave"
        android:paddingLeft="@dimen/rellenoIzqlblUsuClave"
        android:layout_below="@id/txtUsuario"/>
    <EditText
        android:id="@+id/txtClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/clave"
        android:layout_below="@id/lblClave"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtClave">
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="@dimen/anchuraBoton"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:layout_weight="35"
            android:layout_marginTop="@dimen/margenSupBoton"
            style="?android:buttonBarButtonStyle"/>
        <Button
            android:layout_weight="65"
            android:id="@+id/btnAceptar"
            android:layout_width="@dimen/anchuraBoton"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:layout_marginTop="@dimen/margenSupBoton"
            style="?android:buttonBarButtonStyle"/>
    </LinearLayout>

</RelativeLayout>
