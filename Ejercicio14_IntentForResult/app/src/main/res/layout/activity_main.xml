<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dni"
        android:layout_marginBottom="@dimen/margen"/>
    <EditText
        android:id="@+id/txtDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/escribeDNI"
        android:layout_below="@id/lblDni"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDni"
        android:text="@string/nombre"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblNombreResult"
        android:layout_below="@id/lblNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/noDisponible"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNombreResult"
        android:text="@string/edad"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblEdadResult"
        android:layout_below="@id/lblEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/noDisponible"
        android:layout_marginBottom="@dimen/margen"/>
    <Button
        android:id="@+id/btnObtener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obtener"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblEdadResult"/>
</RelativeLayout>
