<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cristinasola.ejercicio14_intentforresult.OtraActividad">

    <TextView
        android:id="@+id/lblDni2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dni"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblDni2Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDni2"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:layout_below="@id/lblDni2Result"
        android:layout_marginBottom="@dimen/margen"/>
    <EditText
        android:id="@+id/txtNombre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNombre2"
        android:layout_marginBottom="@dimen/margen"/>
    <TextView
        android:id="@+id/lblEdad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edad"
        android:layout_below="@id/txtNombre2"
        android:layout_marginBottom="@dimen/margen"/>
    <EditText
        android:id="@+id/txtEdad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblEdad2"
        android:layout_marginBottom="@dimen/margen"/>
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEdad2"
        android:layout_centerHorizontal="true"
        android:text="Enviar"/>
</RelativeLayout>
